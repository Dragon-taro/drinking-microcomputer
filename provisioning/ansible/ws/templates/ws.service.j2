[Unit]
Description = This is a server for Drinking Microcomputer.

[Service]
WorkingDirectory = /var/www/ws-server

ExecStart = /usr/bin/node /var/www/ws-server/server.bundle.js
ExecStop = /bin/kill -HUP $MAINPID
ExecReload = /bin/kill -HUP $MAINPID && /usr/bin/node /var/www/ws-server/server.bundle.js

Restart = always
Type = simple

[Install]
WantedBy = multi-user.target
